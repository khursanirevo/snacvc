{
  "experiment_name": "phase9_3x_batch_3x_lr",
  "description": "Ablation: 3x batch with 3x LR (15e-6) - linear scaling",

  "pretrained_model": "hubertsiuzdak/snac_24khz",

  "train_data": "data/train_split",
  "val_data": "data/val_split",
  "batch_size": 32,
  "num_workers": 8,

  "num_epochs": 10,
  "learning_rate": 15e-6,
  "weight_decay": 0.0001,
  "grad_clip": 1.0,
  "lr_min_ratio": 0.1,
  "save_every": 2,
  "output_dir": "checkpoints/phase9_ablation/3x_batch_3x_lr",

  "l1_weight": 1.0,
  "stft_weight": 1.0,
  "n_ffts": [1024, 2048, 4096],

  "freeze_encoder": true,
  "freeze_vq": true,

  "curriculum": [
    {"epochs": [1, 2], "length": 1.0, "batch_multiplier": 6.0, "comment": "1s segments, 3x batch (192)"},
    {"epochs": [3, 4], "length": 2.0, "batch_multiplier": 3.0, "comment": "2s segments, 3x batch (96)"},
    {"epochs": [5, 6], "length": 3.0, "batch_multiplier": 2.0, "comment": "3s segments, 3x batch (64)"},
    {"epochs": [7, 10], "length": 4.0, "batch_multiplier": 1.5, "comment": "4s segments, 3x batch (48)"}
  ]
}
