{
  "experiment_name": "phase9_variable_length",
  "description": "Phase 9: Variable length segments (1-4s) per batch, no padding",

  "pretrained_model": "hubertsiuzdak/snac_24khz",

  "train_data": "data/train_split",
  "val_data": "data/val_split",
  "segment_length": [1.0, 2.0, 3.0, 4.0],
  "batch_size": 32,
  "num_workers": 8,

  "num_epochs": 10,
  "learning_rate": 5e-6,
  "weight_decay": 0.0001,
  "grad_clip": 1.0,
  "lr_min_ratio": 0.1,
  "save_every": 2,
  "output_dir": "checkpoints/phase9_variable_length",

  "l1_weight": 1.0,
  "stft_weight": 1.0,
  "n_ffts": [1024, 2048, 4096],

  "freeze_encoder": true,
  "freeze_vq": true,

  "comment": "Phase 9: Variable length (1-4s random per batch) - decoder-only, conservative LR"
}
