{
  "experiment_name": "phase9_curriculum",
  "description": "Phase 9: Curriculum learning - gradually increase segment length 1s→4s with dynamic batch sizing",

  "pretrained_model": "hubertsiuzdak/snac_24khz",

  "train_data": "data/train_split",
  "val_data": "data/val_split",
  "batch_size": 32,
  "num_workers": 8,

  "num_epochs": 10,
  "learning_rate": 5e-6,
  "weight_decay": 0.0001,
  "grad_clip": 1.0,
  "lr_min_ratio": 0.1,
  "save_every": 2,
  "output_dir": "checkpoints/phase9_curriculum",

  "l1_weight": 1.0,
  "stft_weight": 1.0,
  "n_ffts": [1024, 2048, 4096],

  "freeze_encoder": true,
  "freeze_vq": true,

  "curriculum": [
    {
      "epochs": [1, 2],
      "length": 1.0,
      "batch_multiplier": 2.0,
      "comment": "Start with 1s (close to SNAC's 0.8s), 2x batch size (64)"
    },
    {
      "epochs": [3, 4],
      "length": 2.0,
      "batch_multiplier": 1.0,
      "comment": "2s segments, baseline batch size (32)"
    },
    {
      "epochs": [5, 6],
      "length": 3.0,
      "batch_multiplier": 0.67,
      "comment": "3s segments, ~2/3 batch size (21-24)"
    },
    {
      "epochs": [7, 10],
      "length": 4.0,
      "batch_multiplier": 0.5,
      "comment": "4s segments, 1/2 batch size (16)"
    }
  ],

  "comment": "Phase 9: Curriculum learning - VRAM-optimized via batch_multiplier (total audio/batch ≈ constant)"
}
