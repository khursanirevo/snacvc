{
  "experiment_name": "phase4_gan_training",
  "description": "Phase 4: GAN training with MPD + MRD discriminators for realistic audio generation",

  "pretrained_model": "hubertsiuzdak/snac_24khz",
  "speaker_encoder_type": "eres2net",
  "speaker_emb_dim": 512,
  "freeze_base": true,

  "train_data": "data/train_split",
  "val_data": "data/val_split",
  "segment_length": 2.0,
  "batch_size": 8,
  "num_workers": 4,

  "num_epochs": 100,
  "early_stopping_patience": 10,
  "learning_rate": 0.0001,
  "disc_learning_rate": 0.00005,
  "weight_decay": 0.00001,
  "grad_clip": 1.0,
  "grad_clip_disc": 1.0,
  "lr_min_ratio": 0.01,
  "save_every": 10,
  "save_every_steps": 4000,
  "output_dir": "checkpoints/phase4_gan",

  "l1_weight": 1.0,
  "stft_weight": 1.0,
  "n_ffts": [1024, 2048, 4096],

  "contrastive_weight": 0.5,
  "contrastive_margin": 0.1,
  "max_negatives": 6,
  "same_speaker_threshold": 0.85,
  "contrastive_on_val": false,

  "gan_weight": 1.0,
  "lambda_adv": 1.0,
  "lambda_fm": 2.0,

  "mpd_periods": [2, 3, 5, 7, 11],
  "mrd_fft_sizes": [1024, 2048, 4096]
}
