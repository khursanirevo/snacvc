{
  "experiment_name": "phase9_finetune",
  "description": "Phase 9: Full SNAC fine-tuning on custom data",

  "pretrained_model": "hubertsiuzdak/snac_24khz",

  "train_data": "data/train_split",
  "val_data": "data/val_split",
  "segment_length": 2.0,
  "batch_size": 32,
  "num_workers": 8,

  "num_epochs": 20,
  "learning_rate": 1e-5,
  "weight_decay": 0.00001,
  "grad_clip": 1.0,
  "lr_min_ratio": 0.1,
  "save_every": 2,
  "output_dir": "checkpoints/phase9_finetune",

  "l1_weight": 1.0,
  "stft_weight": 1.0,
  "n_ffts": [1024, 2048, 4096],

  "comment": "Phase 9: Simple full fine-tuning - no adapters, no VC, just better reconstruction on our data"
}
