{
  "experiment_name": "phase5_with_formant_and_whisper",
  "description": "Phase 4 with stratified hard negatives (easy/medium/hard tiers)",
  "pretrained_model": "hubertsiuzdak/snac_24khz",
  "speaker_encoder_type": "eres2net",
  "speaker_emb_dim": 512,
  "freeze_base": true,
  "train_data": "data/train_split",
  "val_data": "data/val_split",
  "segment_length": 2.0,
  "batch_size": 24,
  "num_workers": 4,
  "num_epochs": 100,
  "early_stopping_patience": 10,
  "learning_rate": 0.0001,
  "disc_learning_rate": 5e-05,
  "weight_decay": 1e-05,
  "grad_clip": 1.0,
  "grad_clip_disc": 1.0,
  "lr_min_ratio": 0.01,
  "save_every": 10,
  "save_every_steps": 500,
  "output_dir": "checkpoints/phase5_film",
  "l1_weight": 1.0,
  "stft_weight": 1.0,
  "n_ffts": [
    1024,
    2048,
    4096
  ],
  "contrastive_weight": 0.5,
  "max_negatives": 6,
  "same_speaker_threshold": 0.85,
  "use_stratified_negatives": true,
  "neg_ratio_easy": 0.3,
  "neg_ratio_medium": 0.4,
  "neg_ratio_hard": 0.3,
  "threshold_easy_medium": 0.3,
  "threshold_medium_hard": 0.6,
  "lambda_recon": 1.0,
  "lambda_speaker_matching": 0.5,
  "use_synthetic_vc": true,
  "synthetic_vc_probability": 0.5,
  "pitch_shift_range": [
    -2,
    -1,
    1,
    2
  ],
  "lambda_synthetic": 0.3,
  "gan_weight": 1.0,
  "lambda_adv": 1.0,
  "lambda_fm": 2.0,
  "mpd_periods": [
    2,
    3,
    5,
    7,
    11
  ],
  "mrd_fft_sizes": [
    1024,
    2048,
    4096
  ],
  "use_faiss_hard_negatives": true,
  "faiss_index_path": "pretrained_models/speaker_faiss.index",
  "comment": "Stratified negatives: 30% easy, 40% medium, 30% hard (similar speakers)",
  "use_formant_shift": true,
  "formant_shift_range": [
    -0.2,
    -0.1,
    0.1,
    0.2
  ],
  "use_content_loss": true,
  "content_loss_model": "large-v3",
  "lambda_content": 0.2
}