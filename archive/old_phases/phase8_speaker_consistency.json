{
  "experiment_name": "phase8_speaker_consistency",
  "description": "Phase 8: Multi-stage adapters for speaker consistency (not conversion)",

  "pretrained_model": "hubertsiuzdak/snac_24khz",
  "speaker_encoder_type": "eres2net",
  "speaker_emb_dim": 512,
  "freeze_base": true,

  "adapter_hidden_dim": 512,
  "adapter_num_layers": 2,
  "adaptive_init": true,

  "train_data": "data/train_split",
  "val_data": "data/val_split",
  "segment_length": 2.0,
  "batch_size": 16,
  "num_workers": 8,

  "num_epochs": 50,
  "early_stopping_patience": 10,
  "learning_rate": 1e-4,
  "disc_learning_rate": 5e-5,
  "weight_decay": 0.00001,
  "grad_clip": 1.0,
  "grad_clip_disc": 1.0,
  "lr_min_ratio": 0.01,
  "save_every": 5,
  "save_every_steps": 500,
  "output_dir": "checkpoints/phase8_consistency",

  "l1_weight": 1.0,
  "stft_weight": 1.0,
  "n_ffts": [1024, 2048, 4096],

  "lambda_recon": 1.0,
  "lambda_speaker_identity": 2.0,
  "lambda_adapter_identity": 0.5,
  "lambda_recon_consistency": 0.5,

  "use_synthetic_vc": true,
  "synthetic_vc_probability": 0.3,
  "pitch_shift_range": [-2, -1, 1, 2],
  "formant_shift_range": [-0.2, -0.1, 0.1, 0.2],
  "use_formant_shift": true,
  "lambda_synthetic": 0.1,

  "gan_weight": 1.0,
  "lambda_adv": 1.0,
  "lambda_fm": 2.0,

  "mpd_periods": [2, 3, 5, 7, 11],
  "mrd_fft_sizes": [1024, 2048, 4096],

  "use_faiss_hard_negatives": false,
  "comment": "Phase 8: Speaker consistency - enhance own speaker identity, not conversion"
}
